[user]
	name = Douglas G Reith
	email = dougreith@gmail.com
[color]
  branch = auto
  diff = auto
  status = auto
  interactive = auto
  ui = true
  pager = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[merge]
  tool = vimdiff
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[push]
  default = matching
[alias]
  a = add
  br = branch
  st = status
  ss = status --short
  ci = commit
  di = diff
  co = checkout
  w = whatchanged
  vimdiff = difftool --tool=vimdiff -y
  vd = difftool --tool=vimdiff -y
  od = difftool --tool=opendiff -y
  unstage = reset HEAD
  lol = log --oneline --graph --decorate
  hist = log --all --graph --pretty='[%C(cyan)%h%Creset]%C(bold cyan)%d%Creset %s'
  showdiff = "!sh -c 'git difftool --tool=vimdiff -y $1^ $1' -"
  lg = "log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative"
  x = "!gitx"
